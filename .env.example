# Sales Cloud V2 Connection
SALES_CLOUD_BASE_URL=https://myXXXXXX.crm.cloud.sap
SC_USERNAME=your-technical-user
SC_PASSWORD=your-password
SC_REQUEST_TIMEOUT_MS=30000

# Proxy Authentication (SAC â†’ Proxy)
PROXY_USERNAME=sac_import
PROXY_PASSWORD=secure-random-password

# Security
ALLOWED_ORIGIN=https://sac-tenant.hcs.cloud.sap
# Required for skiptoken HMAC signing. Generate with:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SKIPTOKEN_SECRET=<your-64-char-hex-string>
# Enable HSTS header (set to 'true' when behind HTTPS termination)
ENABLE_HSTS=false

# Server
PORT=3000
NODE_ENV=production
PUBLIC_URL=https://your-proxy-domain.com
